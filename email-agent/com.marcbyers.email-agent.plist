<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.marcbyers.email-agent</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/marcbyers/Agents/email-agent/venv/bin/python</string>
        <string>/Users/marcbyers/Agents/email-agent/agent.py</string>
        <string>--daemon</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/marcbyers/Agents/email-agent</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Users/marcbyers/Agents/email-agent/logs/stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/marcbyers/Agents/email-agent/logs/stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin</string>
        <key>OAUTHLIB_RELAX_TOKEN_SCOPE</key>
        <string>1</string>
    </dict>

    <key>ProcessType</key>
    <string>Background</string>

    <key>ThrottleInterval</key>
    <integer>60</integer>
</dict>
</plist>
